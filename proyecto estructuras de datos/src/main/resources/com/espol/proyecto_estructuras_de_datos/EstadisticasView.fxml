                    <children>
                        <Button fx:id="actualizarBtn" onAction="#actualizarEstadisticas" prefHeight="25.0" prefWidth="120.0"
                                style="-fx-background-color: linear-gradient(to right, #70c6ff, #4797ff ); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 2, 2);"
