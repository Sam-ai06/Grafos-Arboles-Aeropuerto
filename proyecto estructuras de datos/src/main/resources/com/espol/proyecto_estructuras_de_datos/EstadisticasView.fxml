                        </HBox>

                        <HBox spacing="20.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rutas Activas:">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Text>
                                <Label fx:id="rutasActivasLabel" text="0">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Separator />

                <!-- Aeropuerto Más Conectado -->
                <VBox spacing="10.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Aeropuerto Más Conectado">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>

                        <HBox spacing="20.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre:">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Text>
                                <Label fx:id="aeropuertoMasConectadoLabel" text="N/A">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <HBox spacing="20.0">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Código:">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Text>
                                <Label fx:id="codigoMasConectadoLabel" text="N/A">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
