                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>

                        <ScrollPane prefHeight="80.0" prefWidth="440.0" style="-fx-background-color: transparent;">
                            <content>
                                <Label fx:id="detalleAeropuertosLabel" text="Cargando información..." wrapText="true">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                    <padding>
